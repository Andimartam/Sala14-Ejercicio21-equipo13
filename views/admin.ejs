<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <header></header>
    <section id="articles-list">
      <div class="container">
        <div class="table-title">
          <h3>Articles</h3>
          <a href="/admin/crear">Nuevo</a>
        </div>
        <div class="articles-list">
          <table>
            <thead>
              <tr class="row">
                <td>ID</td>
                <td>Title</td>
                <td>Content</td>
                <td>Image</td>
                <td>Created At</td>
                <td>Author</td>
                <td>Actions</td>
              </tr>
            </thead>
            <tbody>
              <% for (const article of articles) { %>
              <tr>
                <td><%= article.id %></td>
                <td><%= article.title %></td>
                <td><%= article.content.substring(0, 200) %>...</td>
                <td><%= article.image %></td>
                <td><%= article.create_date %></td>
                <td><%= article.author %></td>
                <td>
                  <a href="/admin/editar/<%=article.id%>" class="link edit-link">Editar</a>
                  <a href="/admin/eliminar/<%=article.id%>" class="link delete-link">Eliminar</a>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </section>
    <footer></footer>
  </body>
</html>
